
<%-include('header')-%>

<%-include('navbar')%>

<div class="center-div justify-content-center mt-5">
    <div class="container w-50 border py-5">
        <div class="title font-weight bold text-center">
            <h2>Update Diary</h2>
        </div>
        <form action="/update_diary/<%=update._id%>" method="post" mt-2 id="update-diary">
            <div class="form-group mt-2">
                <label>Title</label>
                <input type="text" class="form-control" name="title" value="<%=update.title%>">
            </div>
            <div class="form-group mt-2">
                <label>Description</label>
                <textarea class="form-control" id="description-field" rows="4" style="resize:none" name="description" onfocus="Updatefun()"></textarea>
            </div>
            <div class="form-group mt-2">
                <label>Date</label>
                <input type="date" class="form-control" name="date" value="<%=update.date%>">
            </div>
            <button type="submit" class="btn btn-success mt-4" onclick="UpdateForm('<%=update._id%>')">Save Changes</button>

        </form>
    </div>
</div>
<script>
    function Updatefun(){
        document.getElementById('description-field').value='<%=update.description%>';
    }
</script>

<%-include('footer')%>
